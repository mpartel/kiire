
<h1><%= t("settings.title") %></h1>

<h2><%= t("settings.places.title")%></h2>

<div>
<% unless @places.empty? %>
  <table id="places-manager">
    <% @places.each do |place| %>
      <tr>
        <td>
          <%= h place.name  %>
        </td>
        <td class="edit">
          <%= link_to t("settings.places.edit"), edit_place_path(place) %>
        </td>
        <td class="delete">
          <%= link_to t("settings.places.delete"), place,
                      :method => :delete,
                      :class => :delete,
                      :confirm => t("settings.places.confirm_delete", :place => h(place.name)) %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= form_for @new_place do |f| %>
  <div>
    <%= f.label :name, t("settings.new_place.name")  %>
    <%= f.text_field :name %>

    <%= f.submit t("settings.new_place.add_place") %>
  </div>
<% end %>
</div>

<h2><%= t("settings.options.title") %></h2>
<%= form_tag settings_path, :method => :put do %>
  <div>
    <%= label_tag "settings[dont_require_login]", t("settings.options.dont_require_login", :username => current_user.username) %>
    <%= check_box_tag "settings[dont_require_login]", '1', current_user.get_setting(:dont_require_login).value %>

    <%= label_tag "settings[show_via_field]", t("settings.options.show_via_field") %>
    <%= check_box_tag "settings[show_via_field]", '1', current_user.get_setting(:show_via_field).value %>
  </div>

  <h2><%= t("settings.options.mobile_reittiopas.title", :link => (link_to 'm.reittiopas.fi', 'http://m.reittiopas.fi', :target => '_blank')).html_safe %></h2>
  <div>
    <div class="radiogroup">
      <div>
        <%= radio_button_tag "settings[mobile_reittiopas]", 'never', current_user.get_setting(:mobile_reittiopas).value == 'never' %>
        <%= label_tag "settings[mobile_reittiopas][never]", t("settings.options.mobile_reittiopas.never") %>
      </div>

      <div>
        <%= radio_button_tag "settings[mobile_reittiopas]", 'always', current_user.get_setting(:mobile_reittiopas).value == 'always' %>
        <%= label_tag "settings[mobile_reittiopas][always]", t("settings.options.mobile_reittiopas.always") %>
      </div>
    </div>

    <%= submit_tag t("settings.options.save") %>
  </div>
<% end %>


<div class="back">
  <%= link_to t("settings.back"), root_path, :class => "back" %>
</div>
